<UserControl x:Class="InstrumentDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Prover.Instruments.View.ViewModels"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate x:Key="SettingItem">
            <Button Command="{Binding DataContext.SetBaudRateCommand,
                                      RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                    CommandParameter="{Binding .}"
                    Content="{Binding .}"
                    Style="{StaticResource SimpleButton}" />
        </DataTemplate>

        <DataTemplate x:Key="PressureItem">
            <StackPanel Orientation="Horizontal">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button Command="" Content="Fetch" />
                        <TextBox Margin="5" Text="{Binding GaugePressure}" />
                        <TextBlock Margin="5" Text="{Binding AtmosphericPressure}" />
                        <TextBlock Margin="5" Text="{Binding PressureUnits}" />
                        <TextBlock Margin="5" Text="{Binding TransducerType}" />
                        <TextBlock Margin="5" Text="{Binding BasePressure}" />
                        <TextBlock Margin="5" Text="{Binding EVCPRessure}" />
                        <TextBlock Margin="5" Text="{Binding EVCFactor}" />
                        <TextBlock Margin="5" Text="{Binding EVCUnsqr}" />
                        <TextBlock Margin="5" Text="{Binding PercentError}" />
                        <TextBlock Margin="5" Text="{Binding ActualPressureFactor}" />
                        <TextBlock Margin="5" Text="{Binding hasPassed}" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="TempItem">
            <StackPanel Orientation="Horizontal">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <TextBlock Text="Gauge Pressure" />
                            <TextBlock Text="{Binding GaugeTemperature}" />
                        </StackPanel>
                        <TextBlock Text="{Binding TemperatureUnits}" />
                        <TextBlock Text="{Binding EVCTemperature}" />
                        <TextBlock Text="{Binding EVCFactor}" />
                        <TextBlock Text="{Binding BaseTemperature}" />
                        <TextBlock Text="{Binding TemperatureFactor}" />
                        <TextBlock Text="{Binding PercentError}" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="ItemFile">
            <StackPanel Orientation="Horizontal">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding ItemClass.Number}" />
                    <TextBlock Grid.Column="1" Text="{Binding ItemClass.ShortDescription}" />
                </Grid>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel Background="White">
            <!--  <ContentControl Content="{Binding Source={StaticResource Instrument}, Mode=OneWay}" />  -->

            <Grid Visibility="{Binding ShowCommButtons, UpdateSourceTrigger=PropertyChanged}">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <WrapPanel Grid.Row="0">
                    <Button>MiniMax</Button>
                    <Button>EC300</Button>
                </WrapPanel>
                <WrapPanel Grid.Row="1">
                    <ItemsControl ItemTemplate="{StaticResource ResourceKey=SettingItem}" ItemsSource="{Binding CommPorts}" />
                </WrapPanel>

                <StackPanel Grid.Row="2"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                    <ItemsControl ItemTemplate="{StaticResource ResourceKey=SettingItem}" ItemsSource="{Binding BaudRates}" />
                </StackPanel>

                <Button Grid.Row="3"
                        Command="{Binding FetchInstrumentInfoCommand}"
                        Content="Fetch Instrument Information"
                        Style="{StaticResource SimpleButton}" />
            </Grid>
            <Grid Margin="15">
                <StackPanel>
                    <!--  Basic Details Info  -->
                    <TextBlock Foreground="Blue">Serial Number:</TextBlock>
                    <TextBlock Foreground="Blue" Text="{Binding Instrument.SerialNumber, UpdateSourceTrigger=PropertyChanged}" />


                    <Expander Foreground="Blue"
                              Header="Pressure"
                              Visibility="{Binding Instrument.IsLivePressure,
                                                   UpdateSourceTrigger=PropertyChanged}">
                        <Grid>
                            <Grid>
                                <TextBlock Text="Pressure Info" />
                            </Grid>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Gauge Press." />
                                    <TextBlock Grid.Column="1" Text="ATM Press." />
                                    <TextBlock Grid.Column="2" Text="Units" />
                                    <TextBlock Grid.Column="3" Text="Transducer" />
                                    <TextBlock Grid.Column="4" Text="Base Press." />
                                    <TextBlock Grid.Column="5" Text="EVC Press. (8)" />
                                    <TextBlock Grid.Column="6" Text="EVC Factor (44)" />
                                    <TextBlock Grid.Column="7" Text="EVC Unsqr. (47)" />

                                    <TextBlock Grid.Column="8" Text="Actual Press. Factor" />
                                    <TextBlock Grid.Column="9" Text="% Error" />
                                    <TextBlock Grid.Column="10" Text="Passed" />
                                </Grid>
                                <ListBox Grid.Row="2"
                                         Margin="5"
                                         ItemTemplate="{StaticResource ResourceKey=PressureItem}"
                                         ItemsSource="{Binding Instrument.PressureTests,
                                                               UpdateSourceTrigger=PropertyChanged}" />

                            </Grid>
                        </Grid>
                    </Expander>
                    <Expander Foreground="Blue"
                              Header="Temperature"
                              Visibility="{Binding Instrument.IsLiveTemperature}">
                        <ListBox ItemTemplate="{StaticResource ResourceKey=TempItem}" ItemsSource="{Binding Instrument.TemperatureTests, UpdateSourceTrigger=PropertyChanged}" />

                    </Expander>
                    <Expander Foreground="Blue" Header="Volume">
                        <ListBox ItemsSource="{Binding Instrument.VolumeTests}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Expander>


                    <Expander Foreground="Blue" Header="Item File">
                        <ListBox ItemTemplate="{StaticResource ResourceKey=ItemFile}" ItemsSource="{Binding Items, UpdateSourceTrigger=PropertyChanged}" />
                    </Expander>
                </StackPanel>
            </Grid>
        </StackPanel>

    </ScrollViewer>

</UserControl>
