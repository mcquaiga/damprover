<UserControl x:Class="InstrumentsListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="506"
             mc:Ignorable="d">
    <ListView Width="Auto"
              AlternationCount="2"
              AutomationProperties.AutomationId="Instruments"
              BorderThickness="0"
              IsSynchronizedWithCurrentItem="True">
        <!--
            ItemsSource="{Binding Path=Position.Items}"
            SelectedItem="{Binding Path=CurrentPositionSummaryItem,
            Mode=TwoWay}"
        -->
        <ListView.View>
            <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Current positions">
                <GridViewColumn Width="200" Header="Serial Number" />
                <!--  DisplayMemberBinding="{Binding Path=TickerSymbol}"  -->
                <GridViewColumn Width="200" Header="Instrument Type" />

                <!--  DisplayMemberBinding="{Binding Path=TickerSymbol}"  -->


            </GridView>
        </ListView.View>
    </ListView>
</UserControl>
